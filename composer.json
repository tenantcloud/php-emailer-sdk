{
    "name": "tenantcloud/emailer",
    "description": "Laravel package for sending emails",
    "license": "MIT",
    "authors": [
        {
            "name": "Yaroslav Nahirnuj",
            "email": "y.nahirnyi@tenantcloud.com"
        }
    ],
    "homepage": "https://github.com/tenantcloud/emailer",
    "keywords": ["Laravel", "Emailer", "mailer"],
    "require": {
		"php": ">=7.4",
        "guzzlehttp/guzzle": "^7.2",
		"illuminate/support": "^7.0|^8.0",
        "tenantcloud/guzzle-helper": "^1.1"
    },
    "require-dev": {
		"pestphp/pest": "^1.0",
        "mockery/mockery": "^1.1",
        "symfony/http-foundation": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "TenantCloud\\Emailer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TenantCloud\\Emailer\\Tests\\": "tests"
        }
    },
	"scripts": {
		"test": "./vendor/bin/phpunit",
		"cs-fix": "./tools/php-cs-fixer/vendor/bin/php-cs-fixer fix -v --show-progress=estimating"
	}
}
